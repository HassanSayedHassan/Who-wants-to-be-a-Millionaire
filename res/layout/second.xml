<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:keepScreenOn="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


            <LinearLayout
            android:background="@drawable/millionaire_set"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3" android:weightSum="1" android:textAlignment="center" android:paddingLeft="4dp">


                        <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


   <!-- =======================================Work in this============================================== -->

                                    <LinearLayout
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1.5" android:weightSum="1">


                                           <LinearLayout android:layout_height="match_parent" android:orientation="vertical"
                                                      android:layout_width="0dp" android:id="@+id/inner1"
                                                      android:layout_weight="0.5" android:weightSum="1"
                                                   >




                                               <LinearLayout android:layout_height="match_parent"
                                                             android:orientation="vertical"
                                                             android:layout_width="match_parent" android:id="@+id/interior1"
                                                             android:layout_weight="0.5" android:weightSum="1"
                                                       >

                                                   <TableLayout android:id="@+id/tableLayout1"
                                                                android:layout_width="fill_parent"
                                                                android:layout_height="fill_parent" android:orientation="vertical"
                                                                android:weightSum="3">


                                                       <TableRow android:id="@+id/tableRow1"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content">


                                                           <Button android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/btictoc"
                                                                   android:background="@drawable/ticktock"
                                                                   android:textColor="#ffffff"/>

                                                       </TableRow>

                                                   </TableLayout>

                                               </LinearLayout>

                                               <LinearLayout android:layout_height="match_parent" android:orientation="vertical"
                                                             android:layout_width="match_parent" android:id="@+id/interior2"
                                                             android:layout_weight="0.5">

                                                   <TableLayout android:id="@+id/tableLayout2"
                                                                android:layout_width="fill_parent"
                                                                android:layout_height="fill_parent" android:orientation="vertical"
                                                                android:weightSum="3">




                                                   <TableRow android:id="@+id/tableRow1"
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content">
                                                   <TextView
                                                           android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/textresult"/>

                                                   </TableRow>
                                                   <TableRow android:id="@+id/tableRow1"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content">


                                                       <Button
                                                               style="?android:attr/buttonStyleSmall"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content" android:visibility="invisible"
                                                               android:text="Next"  android:onClick="nextPlayClicked"
                                                               android:id="@+id/nextplaybtn" android:layout_gravity="left"
                                                               android:layout_margin="4dp"/>



                                                           // ============================================================================================================
                                                           // =====================================================================================================

                                                       </TableRow>

                                                   </TableLayout>
                                               </LinearLayout>



                                          </LinearLayout>

                                          <LinearLayout android:layout_height="match_parent" android:orientation="vertical"
                                                      android:layout_width="0dp" android:id="@+id/inner2"
                                                      android:layout_weight="0.5">

                                              <LinearLayout android:layout_height="match_parent"
                                                            android:orientation="vertical"
                                                            android:layout_width="match_parent" android:id="@+id/interior3"
                                                            android:layout_weight="0.5" android:weightSum="1" >


                                              </LinearLayout>

                                              <LinearLayout android:layout_height="match_parent" android:orientation="vertical"
                                                            android:layout_width="match_parent" android:id="@+id/interior4"
                                                            android:layout_weight="0.5">

                                                  <ImageView
                                                          android:layout_width="fill_parent"
                                                          android:layout_height="fill_parent"
                                                          android:id="@+id/graph"
                                                          android:layout_gravity="center_horizontal"/>
                                              </LinearLayout>



                                          </LinearLayout>



                                    </LinearLayout>

       <!-- =======================================Half Part============================================== -->

                                    <LinearLayout
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1">

                                                     <TableLayout
                                                     android:id="@+id/tableLayout1"
                                                     android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent" android:orientation="vertical"
                                                     android:weightSum="3" android:gravity="center">

                                                         <TableRow android:id="@+id/tableRow1"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content">

                                                                     <Button android:layout_width="0dp"
                                                                     android:layout_height="wrap_content"
                                                                     android:text=""
                                                                     android:id="@+id/bquestion" android:background="@drawable/custom_button"
                                                                     android:layout_weight="1" android:textColor="#1813ff"
                                                                             />

                                                         </TableRow>
                                                         <TableRow android:id="@+id/tableRow1"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:padding="5dip" >

                                                             <Button android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="A"
                                                                     android:id="@+id/bquestion" android:background="@drawable/options"
                                                                     android:layout_weight="1" android:textColor="#1813ff" android:layout_marginLeft="4dp"/>

                                                             <Button android:layout_width="0dp"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="" android:onClick="onOptionAClicked"
                                                                     android:id="@+id/boptiona" android:background="@drawable/custom_button"
                                                                     android:layout_weight="10" android:textColor="#1813ff"/>

                                                             <Button android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="B"
                                                                     android:id="@+id/bquestion" android:background="@drawable/options"
                                                                     android:layout_weight="1" android:textColor="#1813ff" android:layout_marginLeft="4dp"/>

                                                             <Button android:layout_width="0dp"
                                                                     android:layout_height="wrap_content"
                                                                     android:text=""  android:onClick="onOptionBClicked"
                                                                     android:id="@+id/boptionb" android:background="@drawable/custom_button"
                                                                     android:textColor="#1813ff" android:layout_weight="10"/>

                                                         </TableRow>

                                                         <TableRow android:id="@+id/tableRow1"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:padding="5dip" >

                                                             <Button android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="C"
                                                                     android:id="@+id/bquestion" android:background="@drawable/options"
                                                                     android:layout_weight="1" android:textColor="#1813ff" android:layout_marginLeft="4dp"/>

                                                             <Button android:layout_width="0dp"
                                                                     android:layout_height="wrap_content"
                                                                     android:text=""    android:onClick="onOptionCClicked"
                                                                     android:id="@+id/boptionc" android:background="@drawable/custom_button"
                                                                     android:layout_weight="10" android:textColor="#1813ff"/>

                                                             <Button android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="D"
                                                                     android:id="@+id/bquestion" android:background="@drawable/options"
                                                                     android:layout_weight="1" android:textColor="#1813ff" android:layout_marginLeft="4dp"/>

                                                             <Button android:layout_width="0dp"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="" android:onClick="onOptionDClicked"
                                                                     android:id="@+id/boptiond" android:background="@drawable/custom_button"
                                                                     android:textColor="#1813ff" android:layout_weight="10"/>

                                                         </TableRow>

                                                     </TableLayout>

                                    </LinearLayout>
   <!-- =======================================Work in this============================================== -->

                         </LinearLayout>
                </LinearLayout>

            <LinearLayout
            android:background="@drawable/lifeline"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.5" >


                             <LinearLayout android:orientation="vertical"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent">

                                         <LinearLayout
                                         android:layout_height="0dp"
                                         android:layout_width="match_parent"
                                         android:layout_weight="2" android:background="#000000">

                                             <TableLayout
                                                     android:id="@+id/tableLayout1"
                                                     android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent" android:orientation="vertical"
                                                     android:weightSum="3" android:gravity="center">

                                             <TableRow android:id="@+id/tableRow1"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content" android:gravity="center">


                                             </TableRow>
                                                 <TableRow
                                                         android:layout_width="fill_parent"
                                                         android:layout_height="fill_parent" android:gravity="center">

                                                     <Button
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/bfifty" android:onClick="onFiftyfifty"
                                                             android:background="@drawable/custom_fifty_fifty"
                                                             android:layout_margin="3dp"/>
                                                     <Button
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/bphone" android:onClick="onPhoneAfriend"
                                                             android:background="@drawable/custom_phone"
                                                             android:layout_margin="3dp"/>



                                                 </TableRow>
                                                 <TableRow
                                                         android:layout_width="fill_parent"
                                                         android:layout_height="fill_parent" android:gravity="center"
                                                         >

                                                     <Button
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/baudiencepoll" android:onClick="onAudiencepoll"
                                                             android:background="@drawable/custom_audiencepoll"
                                                             android:layout_margin="3dp"/>

                                                     <Button
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/bflip" android:onClick="onFlip"
                                                             android:background="@drawable/custom_flipquestion"
                                                             android:layout_margin="3dp"/>

                                                 </TableRow>

                                             </TableLayout>

                                         </LinearLayout>

                                         <LinearLayout
                                         android:layout_height="0dp"
                                         android:layout_width="match_parent"
                                         android:layout_weight="5" android:weightSum="1" android:background="#000000">

                                             <ListView
                                                     android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent" android:stackFromBottom="true"
                                                     android:id="@+id/listViewMain" android:layout_gravity="center"
                                                     android:layout_weight="1"
                                                     android:textAlignment="center"/>

                                         </LinearLayout>

                                 </LinearLayout>

            </LinearLayout>
</LinearLayout>